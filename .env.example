# Copy this file to .env and edit as needed.
# docker compose will automatically load .env from the project root.

# ── Authentication ────────────────────────────────────────────────────────────
# Web UI password. Leave empty to have a random password printed on startup.
PASSWORD=

# HTTP Basic Auth username (default: admin)
AUTH_USER=admin

# ── Display ───────────────────────────────────────────────────────────────────
DISPLAY_WIDTH=1920
DISPLAY_HEIGHT=1080

# ── Networking ────────────────────────────────────────────────────────────────
# Host port mapped to the container's Nginx (default: 8080)
HOST_PORT=8080
